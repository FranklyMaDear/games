            });
            
            // Î ÏÎ¿ÏƒÎ±ÏÎ¼Î¿Î³Î® Î¼ÎµÎ³Î­Î¸Î¿Ï…Ï‚ ÎºÎ±Ï„Î¬ Ï„Î¿ resize
            window.addEventListener('resize', resizeGameFrame);
            
