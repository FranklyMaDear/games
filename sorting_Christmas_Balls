    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const gameFrame = document.getElementById('gameFrame');
            const loadingOverlay = document.getElementById('loadingOverlay');
            const reloadBtn = document.getElementById('reloadBtn');
            const soundBtn = document.getElementById('soundBtn');
            const snowflakesContainer = document.getElementById('snowflakes');
            
            // Î”Î·Î¼Î¹Î¿Ï…ÏÎ³Î¯Î± Ï‡ÏÎ¹ÏƒÏ„Î¿Ï…Î³ÎµÎ½Î½Î¹Î¬Ï„Î¹ÎºÏ‰Î½ Î½Î¹Ï†Î¬Î´Ï‰Î½
            function createSnowflakes() {
                const snowflakeIcons = ['â„', 'â…', 'â†', 'âœ»', 'âœ¼'];
                const numberOfSnowflakes = 30;
                
                for (let i = 0; i < numberOfSnowflakes; i++) {
                    const snowflake = document.createElement('div');
                    snowflake.classList.add('snowflake');
                    snowflake.innerHTML = snowflakeIcons[Math.floor(Math.random() * snowflakeIcons.length)];
                    
                    // Î¤Ï…Ï‡Î±Î¯ÎµÏ‚ Î¹Î´Î¹ÏŒÏ„Î·Ï„ÎµÏ‚
                    const size = Math.random() * 1.5 + 0.5;
                    const left = Math.random() * 100;
                    const duration = Math.random() * 10 + 10;
                    const delay = Math.random() * 5;
                    
                    snowflake.style.left = left + 'vw';
                    snowflake.style.fontSize = size + 'rem';
                    snowflake.style.animationDuration = duration + 's';
                    snowflake.style.animationDelay = delay + 's';
                    snowflake.style.opacity = Math.random() * 0.7 + 0.3;
                    
                    snowflakesContainer.appendChild(snowflake);
                }
            }
            
            // Î‘Ï…Ï„ÏŒÎ¼Î±Ï„Î· Ï€ÏÎ¿ÏƒÎ±ÏÎ¼Î¿Î³Î® Î¼ÎµÎ³Î­Î¸Î¿Ï…Ï‚ Ï„Î¿Ï… iframe
            function resizeGameFrame() {
                const gameWrapper = document.querySelector('.game-wrapper');
                const containerWidth = gameWrapper.clientWidth;
                const containerHeight = gameWrapper.clientHeight;
                
                // Î ÏÎ¿ÏƒÎ±ÏÎ¼Î¿Î³Î® Î³Î¹Î± Ï„Î¿ Î½Î­Î¿ Ï€Î±Î¹Ï‡Î½Î¯Î´Î¹ (800x600 ÎµÎ¯Î½Î±Î¹ Î· Î±ÏÏ‡Î¹ÎºÎ® Î±Î½Î±Î»Î¿Î³Î¯Î±)
                const targetRatio = 800 / 600; // 1.33:1 Î±Î½Î±Î»Î¿Î³Î¯Î±
                const currentRatio = containerWidth / containerHeight;
                
                if (currentRatio > targetRatio) {
                    // Î Î¿Î»Ï Ï†Î±ÏÎ´Ï container - Ï€ÎµÏÎ¹Î¿ÏÎ¹ÏƒÎ¼ÏŒÏ‚ Ï€Î»Î¬Ï„Î¿Ï…Ï‚
                    gameFrame.style.width = (containerHeight * targetRatio) + 'px';
                    gameFrame.style.height = containerHeight + 'px';
                } else {
                    // Î Î¿Î»Ï ÏˆÎ·Î»ÏŒ container - Ï€ÎµÏÎ¹Î¿ÏÎ¹ÏƒÎ¼ÏŒÏ‚ ÏÏˆÎ¿Ï…Ï‚
                    gameFrame.style.width = containerWidth + 'px';
                    gameFrame.style.height = (containerWidth / targetRatio) + 'px';
                }
                
                // ÎšÎµÎ½Ï„ÏÎ¬ÏÎ¹ÏƒÎ¼Î± Ï„Î¿Ï… iframe
                gameFrame.style.margin = '0 auto';
                gameFrame.style.display = 'block';
            }
            
            // Î‘Ï€ÏŒÎºÏÏ…ÏˆÎ· Ï„Î·Ï‚ Î¿Î¸ÏŒÎ½Î·Ï‚ Ï†ÏŒÏÏ„Ï‰ÏƒÎ·Ï‚ ÏŒÏ„Î±Î½ Ï„Î¿ Ï€Î±Î¹Ï‡Î½Î¯Î´Î¹ Ï†Î¿ÏÏ„ÏÏƒÎµÎ¹
            gameFrame.addEventListener('load', function() {
                setTimeout(() => {
                    loadingOverlay.style.opacity = '0';
                    setTimeout(() => {
                        loadingOverlay.style.display = 'none';
                        resizeGameFrame(); // Î‘Î½Î±Ï€Î±ÏÎ¬ÏƒÏ„Î±ÏƒÎ· Î¼ÎµÏ„Î¬ Ï„Î· Ï†ÏŒÏÏ„Ï‰ÏƒÎ·
                    }, 300);
                }, 1500);
            });
            
            // Î‘Î½Î±Î½Î­Ï‰ÏƒÎ· Ï€Î±Î¹Ï‡Î½Î¹Î´Î¹Î¿Ï
            reloadBtn.addEventListener('click', function() {
                loadingOverlay.style.display = 'flex';
                loadingOverlay.style.opacity = '1';
                setTimeout(() => {
                    gameFrame.src = gameFrame.src;
                }, 300);
                
                // Î ÏÎ¿ÏƒÏ‰ÏÎ¹Î½ÏŒ animation Î³Î¹Î± Ï„Î¿ ÎºÎ¿Ï…Î¼Ï€Î¯
                reloadBtn.style.transform = 'rotate(180deg)';
                setTimeout(() => {
                    reloadBtn.style.transform = '';
                }, 300);
            });
            
            // Î›ÎµÎ¹Ï„Î¿Ï…ÏÎ³Î¯Î± Î®Ï‡Î¿Ï… (Ï€ÏÎ¿ÏƒÎ¿Î¼Î¿Î¯Ï‰ÏƒÎ·)
            let soundEnabled = true;
            soundBtn.addEventListener('click', function() {
                soundEnabled = !soundEnabled;
                
                if (soundEnabled) {
                    soundBtn.innerHTML = '<i class="fas fa-volume-up"></i> Î‰Ï‡Î¿Ï‚';
                    soundBtn.style.background = 'linear-gradient(to right, #dc2626, #b91c1c)';
                    // Î•Î´Ï Î¸Î± Î¼Ï€Î¿ÏÎ¿ÏÏƒÎµ Î½Î± Ï€ÏÎ¿ÏƒÏ„ÎµÎ¸ÎµÎ¯ ÎºÏÎ´Î¹ÎºÎ±Ï‚ Î³Î¹Î± ÎµÎ½ÎµÏÎ³Î¿Ï€Î¿Î¯Î·ÏƒÎ· Î®Ï‡Î¿Ï… ÏƒÏ„Î¿ Ï€Î±Î¹Ï‡Î½Î¯Î´Î¹
                } else {
                    soundBtn.innerHTML = '<i class="fas fa-volume-mute"></i> Î‰Ï‡Î¿Ï‚';
                    soundBtn.style.background = 'linear-gradient(to right, #6b7280, #4b5563)';
